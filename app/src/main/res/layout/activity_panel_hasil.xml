<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Panel_Hasil"
    android:background="#A69999"
    android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPanjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panjang\t\t\: "
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/editTextPanjang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:editable="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lebar\t\t\t\t\t: "
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editTextLebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:editable="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLuas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas\t\t\t\t\t\t: "
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/editTextLuas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:editable="false"
                />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewKeliling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Keliling\t\t\t: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextKeliling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:editable="false"
                android:textColor="@color/black" />

        </LinearLayout>

</LinearLayout>
